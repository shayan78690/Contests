class Solution {
    public int smallestIndex(int[] nums) {
        int n = nums.length;
        for(int i = 0; i < n; i++) {
            if(sumOfDigits(nums[i]) == i){
                return i;
            }   
        }
        return -1;
    }
    public int sumOfDigits(int num) {
        int s = 0;
        while(num > 0) {
            int ld = num % 10;
            s = s + ld;
            num = num / 10;
        }
        return s;
    }
}Â©leetcode
